{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "paths": {
      "_asset": ["assets/*"],
      "_component": ["components/*"],
      "_constant/*": ["constants/*"],
      "_hook/*": ["hooks/*"],
      "_pages/*": ["pages/*"],
      "_redux/*": ["redux/*"],
      "_json/*": ["shared/jsons/*"],
      "_lib/*": ["shared/libs/*"],
      "_style/*": ["shared/styles/*"],
      "_util/*": ["shared/utils/*"],
      "_typing/*": ["types/*"],
      "_images/*": ["images/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./typings/index.d.ts"],
  "exclude": ["node_modules"]
}
